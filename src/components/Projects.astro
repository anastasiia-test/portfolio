---
import Card from "../components/Card.astro";
---

<section id="projects" class="section projects">
    <h1 class="projects-title">Projects</h1>
    <ul role="list" class="link-card-grid" id="projects">
        <Card
            href="https://github.com/anastasiia-test/playwright-practice-app"
            title="Playwright Test Project"
            body="Functional tests project using Playwright library. Used Page Object Model to improve the quality and efficiency of test automation. Implemented CI/CD."
        />
        <Card
            href="https://astro.build/integrations/"
            title="Personal website"
            body="My personal website-portfolio repository"
        />
        <Card
            href="https://astro.build/themes/"
            title="Cypress Test Automation Project"
            body="Cypress Test Automation Project"
        />
        <Card
            href="https://astro.build/chat/"
            title="Web App on Python"
            body="Python web application project"
        />
    </ul>
</section>

<style>
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }
</style>
